@model artgelina.web.Models.LoginModel

@{
    ViewBag.Title = "Login to admin panel";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css">
    <title>Admin panel</title>
</head>
<body>
    <div class="container">
        <form style="max-width: 330px; padding: 15px; margin: 0 auto;" method="POST">
            <h2>Please sign in</h2>
            <label style="color:red;">@Html.ValidationSummary()</label>
            @Html.TextBoxFor(x => x.Login, new { placeholder = "Login", @class = "form-control" })
            <br/>
            @Html.PasswordFor(x => x.Password, new { placeholder = "Password", @class = "form-control" })
            <br/>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
</body>
</html>
